<%- include('header'); -%>

   <h1 class="box title"> <%= listTitle %> </h1>
    
   

   <div class="box">
      <ul class="list-group">
    
         <%  newListItems.forEach((item) => { %> 
            <li class="list-group-item"> 
               <form action="/delete" method="post">
                  <div class="item">
                     <input class="form-check-input me-1" type="checkbox" name="checkbox" onchange="this.form.submit()" value = <%= item._id %>  >
                     <%= item.name %>
                  </div>
               </form>
             </li> 
        <% }) %>



   
          
          <form class="item" action="/" method="post">
           
           <input class="item-input form-control" type="text" name="newItem" placeholder="New Item ">
           <button class="btn btn-primary " type="submit" name="list" value=<%=listTitle%> >+</button>
        
        </form>
        
        </div>
           </ul>
           
   </div>
  
   
   <%- include('footer'); -%>
  
 
   
 